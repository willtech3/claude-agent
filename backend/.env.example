GITLAB_TOKEN=your-gitlab-token

# SQS Configuration
SQS_QUEUE_URL=http://localhost:4566/000000000000/claude-tasks

# S3 Configuration
S3_BUCKET_NAME=claude-agent-artifacts

# Application
DEBUG=true
LOG_LEVEL=INFO