# GitHub Configuration (for agent operations)
GH_TOKEN=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_INTERVAL=30

# Worker Configuration
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT_SECONDS=3600